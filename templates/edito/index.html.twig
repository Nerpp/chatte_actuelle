{% extends 'base.html.twig' %}

{% block title %}Edito index{% endblock %}

{% block body %}
    <h1>Edito index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Edito</th>
                <th>Draft</th>
                <th>PublishedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for edito in editos %}
            <tr>
                <td>{{ edito.id }}</td>
                <td>{{ edito.edito }}</td>
                <td>{{ edito.draft ? 'Yes' : 'No' }}</td>
                <td>{{ edito.publishedAt ? edito.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_edito_show', {'id': edito.id}) }}">show</a>
                    <a href="{{ path('app_edito_edit', {'id': edito.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_edito_new') }}">Create new</a>
{% endblock %}
