{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block header %}
<div class="container">
    <h1>Utilisateur</h1>
</div>
{% endblock %}

{% block section %}
<div class="container">

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
           
            <tr>
                <th>Pseudonyme d'affichage</th>
                <td>{{ user.displayname }}</td>
            </tr>
            <tr>
                <th>Compte vérifié</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Avertissement</th>
                <td>{{ user.warning ? user.warning : '0' }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('USER_INDEX', app.user) %}
    <a href="{{ path('app_user_index') }}">Retour Index</a>
    {% endif %}

    {% if is_granted('EDIT_PROFILE',user) %}
    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('DELETE_USER',app.user) %}
    {{ include('user/_delete_form.html.twig') }}
    {% endif %}
</div>
{% endblock %}