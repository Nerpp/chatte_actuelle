{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe{% endblock %}

{% block header %}
<div class="container">
    {% for flash_error in app.flashes('reset_password_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialisation du mot de passe</h1>
</div>

{% endblock %}

{% block section %}
<div class="container pt-2">

    {# {{ form_row(requestForm.email) }} #}

    <div class="container">
        {{ form_start(requestForm) }}
        <div class="d-grid gap-2">
            <div class="">
                <small>
                    Un email de controle vous sera envoyé, si vous ne le voyez pas penser à surveille votre boite spam
                </small>
            </div>
            
            <div class="">
                {{ form_widget(requestForm.email, {'attr':{'class':'form-control form-control-lg'}}) }}
            </div>
            <div class="">
                <button class="btn btn-primary">Envoit email</button>
            </div>
        </div>
        {{ form_end(requestForm) }}
    </div>
</div>
{% endblock %}