{% extends 'base.html.twig' %}

{% block title %}Tags index{% endblock %}

{% block header %}
<div class="container pt-5">
    <div class="text-center">
        <h1>Index des Tags</h1>
    </div>
</div>
{% endblock %}

{% block section %}
    
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th><p>Nom</p></th>
                <th><p>Editer</p></th>
                <th><p>Supprimer</p></th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>
                    <p>
                        {{ tag.name }}
                    </p>
                </td>
                <td>
                    {# <a href="{{ path('app_tags_show', {'id': tag.id}) }}">show</a> #}
                   
                    <a href="{{ path('app_tags_edit', {'id': tag.id}) }}">edit</a>
                </td>
                <td> {{ include('tags/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
<div class="container pt-5">
    <div class="d-flex flex-row justify-content-evenly">
        <div class="">
            <a href="{{ path('app_admin') }}">Retour</a>
        </div>
        <div class="">
        <a href="{{ path('app_tags_new') }}">Cr√©er un nouveau</a>
        </div>
    </div>
</div>
{% endblock %}
