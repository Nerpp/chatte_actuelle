{% extends 'base.html.twig' %}

{% block title %}Tags index{% endblock %}

{% block header %}
<div class="container">
    <div class="text-center">
        <h1>Index des Tags</h1>
    </div>
</div>
{% endblock %}

{% block section %}
    
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                {# <th>Color</th> #}
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.name }}</td>
                {# <td>{{ tag.color }}</td> #}
                <td>
                    {# <a href="{{ path('app_tags_show', {'id': tag.id}) }}">show</a> #}
                   
                    <a href="{{ path('app_tags_edit', {'id': tag.id}) }}">edit</a>
                </td>
                <td> {{ include('tags/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
<div class="container">
    <div class="">
        <a href="{{ path('app_admin') }}">Retour</a>
    </div>
    <div class="">
    <a href="{{ path('app_tags_new') }}">Create new</a>
    </div>
</div>
{% endblock %}
