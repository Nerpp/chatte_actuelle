{% extends 'base.html.twig' %}

{% block title %}Administration
{% endblock %}

{% block header %}
	<div class="container">
		<div class="">
			<h1>Bienvenue
				{{ app.user.displayName }}</h1>
		</div>
	</div>
{% endblock %}

{% block section %}

	<div class="container pt-5">
		<div class="d-flex flex-column d-grid gap-3">
			<div class="">
				<h2>Gestion Tags</h2>
			</div>
			<div class="d-flex flex-row d-grid gap-2">
				<div class="">
					<a class="btn btn-primary" href="{{ path('app_tags_new') }}" role="button">Créer un Tag</a>
				</div>
				<div class="">
					<a class="btn btn-primary" href="{{ path('app_tags_index') }}" role="button">Index Tags</a>
				</div>
			</div>
		</div>
	</div>
	<div class="container pt-5">
		<div class="d-flex flex-column d-grid gap-3">
			<div class="">
				<h2>Gestion Articles</h2>
			</div>
			<div class="d-flex flex-row d-grid gap-2">
				<div class="">
					<a class="btn btn-primary" href="{{ path('app_articles_new') }}" role="button">Nouvel Article</a>
				</div>

				<div class="">
					<a class="btn btn-primary" href="{{ path('app_article_index_personnal') }}" role="button">Liste des articles personnel publié</a>
				</div>

				<div class="">
					<a class="btn btn-primary" href="{{ path('app_draft_index_personnal') }}" role="button">Liste Brouillon</a>
				</div>

				{% if is_granted('VIEW_ALL_DRAFT',app.user) %}
					<div class="">
						<a class="btn btn-primary" href="{{ path('app_draft_index') }}" role="button">Liste de tout les Brouillons</a>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
