{{ form_start(form) }}
<div class="d-grid gap-3">
	<div class="col-12 bg-danger bg-gradient text-white text-center ">
			{% for message in app.flashes('title') %}
				<div class="flash-notice">
					{{ message }}
				</div>
			{% endfor %}
		</div>
	<div class="">
		{{ form_widget(form.title, {'attr': {'class': 'form-control  text-center'}}) }}
	</div>
	<div class="">
		<div class="col-12 bg-danger bg-gradient text-white text-center ">
			{% for message in app.flashes('tags') %}
				<div class="flash-notice">
					{{ message }}
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="d-flex flex-row align-items-center justify-content-around ">
        <div class="">
			{% include "/articles/_modal_information.html.twig" %}
		</div>
		<div class="">
			{{ form_widget(form.tags) }}
		</div>
		<div class="col-3">
			{{ form_widget(form.newTags, {'attr': {'class': 'form-control  text-center'}}) }}
		</div>
	</div>
	<div class="">
		{{ form_widget(form.article, {'attr': {'class': 'form-control'}}) }}
	</div>

	<div class="d-flex flex-row d-grid gap-2">
		<div class="">
			{{ form_label(form.draft, 'DÃ©cocher la case pour Publier l\'article') }}
        </div>
        <div class="">
            {{ form_widget(form.draft) }}
        </div>
    </div>
    
    <div class="">
        <button class="btn">{{ button_label|default('Enregistrer') }}</button>
    </div>
</div>
{{ form_end(form) }}
